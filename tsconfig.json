{
    "compilerOptions": {
        "lib": ["esnext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "erasableSyntaxOnly": true,
        "importHelpers": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "noEmit": true
    }
}
